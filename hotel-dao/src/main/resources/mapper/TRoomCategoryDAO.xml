<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.TRoomCategoryDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.hotel.entity.TRoomCategory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="room_count" property="roomCount"/>
        <result column="hotel_id" property="hotelId"/>
        <result column="store_id" property="storeId"/>
        <result column="desc" property="desc"/>
        <result column="rack_rate" property="rackRate"/>
        <result column="deposit" property="deposit"/>
        <result column="discount_enable" property="discountEnable"/>
        <result column="discount" property="discount"/>
        <result column="weekend_fare_enable" property="weekendFareEnable"/>
        <result column="weekend_fare" property="weekendFare"/>
        <result column="mark_modified" property="markModified"/>
        <result column="breakfast_enable" property="breakfastEnable"/>
        <result column="breakfast_quantity" property="breakfastQuantity"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, room_count AS roomCount, hotel_id AS hotelId, store_id AS storeId, desc, rack_rate AS rackRate, deposit, discount_enable AS discountEnable, discount, weekend_fare_enable AS weekendFareEnable, weekend_fare AS weekendFare, mark_modified AS markModified, breakfast_enable AS breakfastEnable, breakfast_quantity AS breakfastQuantity, created_by AS createdBy, created_at AS createdAt, updated_by AS updatedBy, updated_at AS updatedAt
    </sql>

	<select id="queryHotelHome" parameterType="Map" resultType="com.gt.hotel.responseEntity.ResRoomCategory">
		SELECT id roomCategoryId, name, rack_rate rackRate, discount, room_count count, weekend_fare weekendFare, deposit 
		FROM t_room_category 
		<where>
			<if test="hotel_id != null">
				hotel_id = #{hotel_id} 
			</if>
		</where>
		<if test="page != null">
			LIMIT #{page}, #{pageSize}
		</if>
	</select>
	
	<select id="queryHotelHomeCount" parameterType="Map" resultType="Integer">
		SELECT COUNT(id) 
		FROM t_room_category 
		<where>
			<if test="hotel_id != null">
				hotel_id = #{hotel_id} 
			</if>
		</where>
	</select>
	
</mapper>
