<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.SysDictionaryDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.hotel.entity.SysDictionary">
		<id column="id" property="id" />
		<result column="dict_type_id" property="dictTypeId" />
		<result column="dict_code" property="dictCode" />
		<result column="dict_cn_name" property="dictCnName" />
		<result column="dict_en_name" property="dictEnName" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, dict_type_id, dict_code, dict_cn_name, dict_en_name
    </sql>
    <sql id="Base_Column_List_VO">
        sys_dictionary_type.id, sys_dictionary_type.dict_type_id AS dictTypeId, sys_dictionary_type.dict_code AS dictCode, sys_dictionary_type.dict_cn_name AS dictCnName, sys_dictionary_type.dict_en_name AS dictEnName
    </sql>

	<select id="queryInvoice" resultType="com.gt.hotel.vo.SysDictionaryVo">
		SELECT <include refid="Base_Column_List_VO" />  
		FROM sys_dictionary 
		JOIN sys_dictionary_type ON sys_dictionary.dict_type_id = sys_dictionary_type.id 
		<where>
			<if test="dictName != null">
				AND sys_dictionary_type.id = #{dictId} 
			</if>
		</where>
	</select>

</mapper>
