<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.TBreakfastCouponsDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gt.hotel.entity.TBreakfastCoupons">
		<id column="id" property="id" />
		<result column="order_id" property="orderId" />
		<result column="category_id" property="categoryId" />
		<result column="room_num" property="roomNum" />
		<result column="code" property="code" />
		<result column="write_off_status" property="writeOffStatus" />
		<result column="writer" property="writer" />
		<result column="created_by" property="createdBy" />
		<result column="created_at" property="createdAt" />
		<result column="updated_by" property="updatedBy" />
		<result column="updated_at" property="updatedAt" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, order_id, category_id, room_num, code, write_off_status, writer,
		created_by, created_at, updated_by, updated_at
	</sql>

	<select id="findBreakfastCoupons" resultType="com.gt.hotel.vo.BreakfastCouponsVo">
		SELECT id, order_id
		orderId, category_id categoryId, room_num roomNum, code,
		write_off_status writeOffStatus, writer, created_by createdBy,
		created_at createdAt, updated_by updatedBy, updated_at updatedAt 
		FROM t_breakfast_coupons 
		WHERE order_id = #{orderId} AND room_num = #{roomNum} 
		<!-- AND DATE_FORMAT(created_at, '%Y-%m-%d') = DATE_FORMAT(NOW(), '%Y-%m-%d') -->
	</select>

</mapper>
