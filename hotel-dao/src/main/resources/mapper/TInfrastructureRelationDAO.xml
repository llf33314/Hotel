<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.TInfrastructureRelationDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.hotel.entity.TInfrastructureRelation">
        <id column="id" property="id"/>
        <result column="infrastructure_id" property="infrastructureId"/>
        <result column="module" property="module"/>
        <result column="reference_id" property="referenceId"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="display_value" property="displayValue"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, infrastructure_id, module, reference_id, created_by, created_at, updated_by, updated_at, display_value
    </sql>
    <sql id="Base_Column_List_VO">
        t.id, t.infrastructure_id, t.module, t.reference_id, t.created_by, t.created_at, t.updated_by, t.updated_at, t.display_value
    </sql>

    <select id="findRelationVoListByRefIdAndModule" resultType="com.gt.hotel.vo.InfrastructureRelationVo">
        select
        <include refid="Base_Column_List_VO"/>, a.`name`, a.icon_url iconUrl 
        from t_infrastructure_relation t JOIN t_infrastructure a ON t.infrastructure_id = a.id WHERE t.module=#{module} AND t.reference_id=#{refId}
    </select>
</mapper>
