<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.THotelDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.hotel.entity.THotel">
        <id column="id" property="id"/>
        <result column="bus_id" property="busId"/>
        <result column="store_id" property="storeId"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="phone" property="phone"/>
        <result column="address" property="address"/>
        <result column="thumbnail" property="thumbnail"/>
        <result column="logo" property="logo"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="mark_modified" property="markModified"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, bus_id AS busId, store_id AS storeId, name, desc, phone, address, thumbnail, logo, longitude, latitude,
        mark_modified AS markModified, created_by AS createdBy, created_at AS createdAt, updated_by AS updatedBy,
        updated_at AS updatedAt
    </sql>

    <select id="queryHotelHome" resultType="com.gt.hotel.vo.HotelVo">
        SELECT id hotelId, name, phone tel, address addr, logo imageurl, store_id storeId
        FROM t_hotel
        <where>
            <if test="req.hotelId != null">
                AND id = #{req.hotelId}
            </if>
            <if test="busId != null">
                AND bus_id = #{busId}
            </if>
        </where>
    </select>

</mapper>
