<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.TErpHotelInstallationDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gt.hotel.entity.TErpHotelInstallation">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="logo" property="logo" />
		<result column="if_use" property="ifUse" />
		<result column="type" property="type" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, logo, if_use, type
    </sql>

	<select id="selectByHotelId" parameterType="Integer" resultMap="BaseResultMap">
		SELECT a.id, a.name, a.logo, a.if_use, a.type FROM t_erp_hotel_installation a 
		JOIN t_erp_hotel_installation_relation b ON a.id = b.installation_id 
		WHERE b.hotel_id = #{id} 
	</select>

</mapper>
