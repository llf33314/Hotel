<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.hotel.dao.TRoomDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.hotel.entity.TRoom">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="number" property="number"/>
        <result column="floor" property="floor"/>
        <result column="status" property="status"/>
        <result column="mark_modified" property="markModified"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_id AS categoryId, number, floor, status, mark_modified AS markModified, created_by AS
        createdBy, created_at AS createdAt, updated_by AS updatedBy,
        updated_at AS updatedAt
    </sql>

	<select id="queryRoomList" resultType="com.gt.hotel.vo.RoomVo">
		SELECT 
		<include refid="Base_Column_List" /> 
		FROM t_room 
		WHERE mark_modified = 0 
		<if test="categoryId != null">
			AND category_id = #{categoryId} 
		</if>
	</select>
	
</mapper>
